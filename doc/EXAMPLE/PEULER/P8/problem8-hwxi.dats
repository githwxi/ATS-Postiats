implement
main0 () = let
//
val n = string1_length (theInput)
prval [n:int] EQINT () = eqint_make_guint (n)
//
fun loop
  {i:nat | i <= n} .<n-i>.
  (i: int i, max: &int): void =
  if n >= i + 5 then let
    val c0 = theInput[i+0] - '0'
    val c1 = theInput[i+1] - '0'
    val c2 = theInput[i+2] - '0'
    val c3 = theInput[i+3] - '0'
    val c4 = theInput[i+4] - '0'
    val p = c0 * c1 * c2 * c3 * c4
    val () = (if p > max then max := p else ()): void
  in
    loop (i+1, max)
  end else () // end of [if]
// end of [loop]
//
