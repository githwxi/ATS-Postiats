//
case+ xs1 of
| list0_cons (x1, xs1) => (
  case+ xs2 of
  | list0_cons (x2, xs2) =>
      list0_cons (f (x1, x2), list0_map2 (xs1, xs2, f))
  | list0_nil () => list0_nil ()
