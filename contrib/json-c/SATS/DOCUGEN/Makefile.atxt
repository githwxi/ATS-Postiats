htmlgendecl_dats.o: \\
  htmlgendecl.dats ; $(ATSCC) $(INCLUDE) $(INCLATS) -c $(ATSCCFLAGS) $<

htmlgendecl_atxt.dats: htmlgendecl.atxt ; \
  $(ATSDOC) --outcode $@ -i $< > htmlgendecl_atxt.txt

